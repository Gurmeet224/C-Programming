//(a)
#include<stdio.h>
int main(){
    int a,r,l,b;
    float as,ac,ar,ps,pc,pr;
    printf("Enter Side of The square : ");
    scanf("%d",&a);
    as = a*a;
    ps = 4*a;
    printf("Area of Sqaure :%.2f\nPerimeter of square :%.2f\n",as,ps);
    printf("Enter radius of The circle : ");
    scanf("%d",&r);
    ac = 3.14*(r*r);
    pc = 2*3.14*r;
    printf("Area of Circle :%.2f\nPerimeter of Circle :%.2f\n",ac,pc);
    printf("Enter Length and Breadth of The Reactangle :");
    scanf("%d%d",&l,&b);
    ar = l*b;
    pr = 2*(l+b);
    printf(" Area ofRectangle :%.2f\nPerimeter of Rectangle :%.2f",ar,pr);
    return 0;
}

//(b)
#include<stdio.h>
int main(){
    int x,y,sum,sub,mul,rem;
    printf("Enter two No.s X and y: ");
    scanf("%d%d",&x,&y);
    sum = x+y;
    sub = x-y;
    mul =x*y;
    rem = x%y;
    printf("Addition\t%d\n",sum);
    printf("Substraction\t%d\n",sub);
    printf("Multiplication\t%d\n",mul);
    printf("Remainder\t%d",rem);
    return 0;
}
//(c)
#include<stdio.h>
#include<math.h>
int main(){
    double x1,x2,y1,y2,distance;
    printf("Enter the x and y co-orfinate of Point 1 : ");
    scanf("%lf%lf",&x1,&y1);
    printf("Enter the x and y co-orfinate of Point 2 : ");
    scanf("%lf%lf",&x2,&y2);
    distance = sqrt(pow(x2-x1,2)+pow(y2-y1,2));
    printf("Euclifean distance between the Points is :%lf",distance);
    return 0;

}
